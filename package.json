{
  "name": "killrvideo-node",
  "version": "0.0.0",
  "description": "A video sharing web application using Apache Cassandra, DataStax Enterprise, and NodeJS",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build:js": "babel src --out-dir lib",
    "build:html": "cpx src/**/*.html lib --verbose",
    "nodemon": "nodemon",
    "wait": "wait-on file:lib/index.js",
    "serve": "npm-run-all wait nodemon",
    "start": "npm-run-all clean --parallel \"build:* --watch\" serve"
  },
  "author": "Luke Tillman <luke@luketillman.com> (http://www.luketillman.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/LukeTillman/killrvideo-node.git"
  },
  "files": [
    "lib"
  ],
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "cpx": "^1.2.1",
    "nodemon": "^1.9.1",
    "npm-run-all": "^1.5.1",
    "rimraf": "^2.5.2",
    "wait-on": "^1.3.1"
  }
}
